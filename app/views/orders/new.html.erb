<div class='container pt-0 pb-10'>
  <h1 class='text-5xl mb-5 text-center'>注文フォーム</h1>

  <%= form_for @order, url: confirm_orders_path do |f| %>

    <div class='col-md-6 mx-auto mb-5'>
      <div class='mb-4'>
        <%= f.label :name, class: 'block text-gray-700 text-sm font-bold mb-2 border-l-4 border-blue-700 pl-2' %>
        <%= f.text_field :name, size: 40, placeholder: 'サンプル太郎', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>
    </div>

    <div>
      <%= f.submit '確認画面へ', class: 'bg-blue-800 hover:bg-blue-700 text-white rounded px-4 py-2 w-full' %>
    </div>

  <% end %>
</div>